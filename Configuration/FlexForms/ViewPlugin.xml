<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<sheetTitle>LLL:EXT:core/Resources/Private/Language/Form/locallang_tabs.xlf:general</sheetTitle>
				<type>array</type>
				<el>
					<settings.mode>
						<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:mode</label>
						<onChange>reload</onChange>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0">
									<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:mode.list</label>
									<value>list</value>
								</numIndex>
								<numIndex index="1">
									<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:mode.single</label>
									<value>single</value>
								</numIndex>
							</items>
							<default>list</default>
						</config>
					</settings.mode>
					<settings.tca>
						<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:tca</label>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<itemsProcFunc>LiquidLight\Anthology\Hook\PluginConfigurationHook->getRepositories</itemsProcFunc>
						</config>
					</settings.tca>
					<settings.singleView>
						<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:singleView</label>
						<displayCond>FIELD:settings.mode:=:list</displayCond>
						<config>
							<type>group</type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<suggestOptions>
								<default>
									<searchWholePhrase>1</searchWholePhrase>
								</default>
							</suggestOptions>
						</config>
					</settings.singleView>
					<settings.listView>
						<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:listView</label>
						<displayCond>FIELD:settings.mode:=:single</displayCond>
						<config>
							<type>group</type>
							<allowed>pages</allowed>
							<size>1</size>
							<maxitems>1</maxitems>
							<minitems>0</minitems>
							<suggestOptions>
								<default>
									<searchWholePhrase>1</searchWholePhrase>
								</default>
							</suggestOptions>
						</config>
					</settings.listView>
				</el>
			</ROOT>
		</sDEF>
		<sDisplay>
			<ROOT>
				<sheetTitle>LLL:EXT:core/Resources/Private/Language/Form/locallang_tabs.xlf:appearance</sheetTitle>
				<type>array</type>
				<el>
					<settings.itemsPerPage>
						<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:itemsPerPage</label>
						<displayCond>FIELD:sDEF.settings.mode:=:list</displayCond>
						<config>
							<type>input</type>
							<size>10</size>
							<eval>int</eval>
							<default>10</default>
						</config>
					</settings.itemsPerPage>
					<settings.enablePagination>
						<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:enablePagination</label>
						<displayCond>FIELD:sDEF.settings.mode:=:list</displayCond>
						<onChange>reload</onChange>
						<config>
							<type>check</type>
							<renderType>checkboxToggle</renderType>
							<default>1</default>
						</config>
					</settings.enablePagination>
					<settings.maximumPaginationLinks>
						<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:maximumPaginationLinks</label>
						<description>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:maximumPaginationLinks.description</description>
						<displayCond>
							<and>
								<value1>FIELD:settings.enablePagination:=:1</value1>
								<value2>FIELD:sDEF.settings.mode:=:list</value2>
							</and>
						</displayCond>
						<config>
							<type>input</type>
							<size>10</size>
							<eval>int</eval>
							<default>5</default>
						</config>
					</settings.maximumPaginationLinks>
					<settings.noResultsText>
						<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:noResultsText</label>
						<description>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:noResultsText.description</description>
						<config>
							<type>text</type>
							<enableRichtext>true</enableRichtext>
						</config>
					</settings.noResultsText>
					<settings.template>
						<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:template</label>
						<description>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:template.description</description>
						<exclude>true</exclude>
						<config>
							<type>input</type>
						</config>
					</settings.template>
				</el>
			</ROOT>
		</sDisplay>
		<sFilters>
			<ROOT>
				<sheetTitle>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:filters</sheetTitle>
				<type>array</type>
				<el>
					<settings.filterMode>
						<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:filterMode</label>
						<displayCond>FIELD:sDEF.settings.mode:=:list</displayCond>
						<config>
							<type>select</type>
							<renderType>selectSingle</renderType>
							<items>
								<numIndex index="0">
									<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:filterMode.and</label>
									<value>and</value>
								</numIndex>
								<numIndex index="1">
									<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:filterMode.or</label>
									<value>or</value>
								</numIndex>
							</items>
							<default>and</default>
						</config>
					</settings.filterMode>
					<settings.filters>
						<label>LLL:EXT:ll_anthology/Resources/Private/Language/locallang_be.xlf:filters</label>
						<displayCond>FIELD:sDEF.settings.mode:=:list</displayCond>
						<config>
							<type>inline</type>
							<foreign_table>tx_anthology_domain_model_filter</foreign_table>
						</config>
					</settings.filters>
				</el>
			</ROOT>
		</sFilters>
	</sheets>
</T3DataStructure>
